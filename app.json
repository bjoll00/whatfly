{
  "expo": {
    "name": "WhatFly",
    "slug": "whatfly-fishing-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/WhatFlyFishingLogo.png",
    "scheme": "whatfly",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "AI-powered fly fishing companion app that helps you choose the right fly for any fishing conditions. Track your catches, get personalized fly recommendations, and improve your fishing success.",
    "privacy": "public",
    "keywords": [
      "fishing",
      "fly fishing",
      "AI",
      "outdoor",
      "sports",
      "nature",
      "trout",
      "catch log",
      "fishing guide"
    ],
    "category": "sports",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.whatflyfishing.app",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to take photos of your catches and fishing conditions.",
        "NSPhotoLibraryUsageDescription": "This app accesses your photo library to save and share fishing photos.",
        "NSLocationWhenInUseUsageDescription": "This app uses your location to show nearby fishing spots and provide location-based recommendations.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app uses your location to show nearby fishing spots and provide location-based recommendations.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "appStoreUrl": "https://apps.apple.com/app/whatfly/id[TO_BE_FILLED]"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#25292e"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.whatflyfishing.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ],
      "playStoreUrl": "https://play.google.com/store/apps/details?id=com.whatflyfishing.app"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "build": {
        "babel": {
          "include": []
        }
      }
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-web-browser",
      "expo-secure-store",
      "react-native-compressor"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "ec133e91-8db4-44a1-ad4f-348d01678740"
      }
    }
  }
}
